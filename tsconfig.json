{
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.js"],
  // @MIGRATION_TODO: Remove exclude here. At the current phase of migration, all the native parts has not been fixed yet.
  "exclude": ["src/**/*.native.ts", "src/**/*.native.tsx"],
  "compilerOptions": {
    "strict": true,
    "lib": ["dom", "es2019"],
    "jsx": "react-jsx",
    "target": "es5",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "downlevelIteration": true
  },
  "extends": "expo/tsconfig.base"
}
