{
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
  ],
  "compilerOptions": {
    "strict": true,
    "lib": [
      "dom",
      "es2019"
    ],
    "jsx": "react",
    "target": "es5",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
  }
}
